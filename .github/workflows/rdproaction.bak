name: æ„å»º RustDesk-Pro

on:
  workflow_dispatch:
  schedule:
    - cron: '0 0 * * 1'  # æ¯å‘¨ä¸€ UTC 0 ç‚¹è¿è¡Œï¼ˆåŒ—äº¬æ—¶é—´ å‘¨ä¸€æ—©ä¸Š8ç‚¹ï¼‰

jobs:
  modify-and-build:
    runs-on: ubuntu-latest

    env:
